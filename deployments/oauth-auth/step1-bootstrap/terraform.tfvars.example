# terraform.tfvars - Step 1 Bootstrap (API Key Phase)
# Copy this to terraform.tfvars and fill in your actual values

# Confluent Cloud API Keys (temporary - only for bootstrap phase)
confluent_cloud_api_key    = "YOUR_CONFLUENT_API_KEY"
confluent_cloud_api_secret = "YOUR_CONFLUENT_API_SECRET"

# OAuth configuration for Terraform provider
oauth_external_client_id = "YOUR_TERRAFORM_AZURE_APP_CLIENT_ID"

# Note: Using Microsoft Graph scope to avoid Azure AD "resource not found" error
# oauth_external_token_scope = "https://graph.microsoft.com/.default"

# Existing Identity Provider (choose one from your list)
existing_identity_provider_id = "op-4N"  # or "op-q0G"

# Environment (update with your environment ID)
environment_id = "env-nvv5xz"